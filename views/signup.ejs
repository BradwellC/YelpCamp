<% layout('layouts/boilerplate') %>
<div class="signup">
  <h1>Signup here!</h1>
  <form id="form" action="/signup" method="post">
    <div class="form-group">
      <label class="form-label" for="title">Username:</label>
      <input class="form-control" type="text" id="username" name="username" />
      <small></small>
    </div>

    <div class="form-group">
      <label class="form-label" for="price">Email Address:</label>
      <input class="form-control" type="text" id="email" name="email" />
      <small></small>
    </div>

    <div class="form-group">
      <label class="form-label" for="description">Password:</label>
      <input
        class="form-control"
        type="password"
        id="password"
        name="password"
      />
      <small></small>
    </div>

    <div class="form-group">
      <label class="form-label" for="description">Confirm Password:</label>
      <input
        class="form-control"
        type="password"
        id="password-confirm"
        name="password-confirm"
      />
      <small></small>
    </div>

    <div class="form-group">
      <input type="submit" value="Register" class="btn btn-violet" />
    </div>
  </form>
</div>
